---
import { SITE, socialLinks } from '@/site'
import { Icon } from 'astro-icon/components'

const { title, description } = SITE

// Type guard to check if a string is a valid icon name
function isIconName(
  name: string,
): name is 'x-twitter' | 'bluesky' | 'youtube' | 'linkedin-in' | 'github' {
  return ['x-twitter', 'bluesky', 'youtube', 'linkedin-in', 'github'].includes(
    name,
  )
}
---

<div class="min-h-screen flex items-center justify-center px-4 bg-white dark:bg-gray-900">
  <div class="text-center">
    {/* Name */}
    <h1 class="text-5xl font-bold text-gray-900 dark:text-white md:text-6xl">
      {title}
    </h1>
    
    {/* Title */}
    <p class="mt-4 text-xl text-gray-600 dark:text-gray-300">
      {description}
    </p>
    
    {/* Social links */}
    <div class="mt-6 flex justify-center space-x-6">
      {socialLinks.map(({ title, url, iconName: iconId }) => {
        return (
          <a 
            href={url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 transition-colors duration-200"
            aria-label={title}
          >
            {isIconName(iconId) && <Icon name={`fa6-brands:${iconId}`} class="w-6 h-6" />}
          </a>
        );
      })}
    </div>
  </div>
</div>
