---
import Icon from '@/components/Icon.astro'
import { SITE, socialLinks } from '@/site'

const { title, description } = SITE
---

<div class="min-h-screen flex items-center justify-center px-4 bg-white dark:bg-gray-900">
  <div class="text-center">
    {/* Name */}
    <h1 class="text-5xl font-bold text-gray-900 dark:text-white md:text-6xl">
      {title}
    </h1>
    
    {/* Title */}
    <p class="mt-4 text-xl text-gray-600 dark:text-gray-300">
      {description}
    </p>
    
    {/* Social links */}
    <div class="mt-6 flex justify-center space-x-6">
      {socialLinks.map((social) => {
        // Special handling for LinkedIn URL
        const url = social.title === 'LinkedIn' 
          ? `https://linkedin.com/in/${social.url}`
          : `https://${social.title.toLowerCase()}.com/${social.url}`;
        
        return (
          <a 
            key={social.title} 
            href={url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 transition-colors duration-200"
            aria-label={social.title}
          >
            <Icon icon={social.icon} />
          </a>
        );
      })}
    </div>
  </div>
</div>
