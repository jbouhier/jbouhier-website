---
import Layout from '@/layouts/Layout.astro';
import { SocialIcons } from '@/components/SocialIcons';
import { author, products } from '@/config';
import ProductCard from '@/components/ProductCard.astro';
---

<Layout>
  <main class="flex-1 flex flex-col lg:flex-row lg:items-start lg:justify-center gap-6 lg:gap-16 xl:gap-24 bg-gradient-to-b from-primary-50 via-primary-100 to-primary-50 dark:from-primary-900 dark:via-primary-800 dark:to-primary-900 pt-6 px-4 sm:pt-8 sm:px-6 lg:pt-24 h-full min-h-screen">
    <!-- Left Column - Profile -->
    <div class="w-full lg:w-[40%] xl:w-[35%] max-w-2xl mx-auto lg:mx-0 p-4 sm:p-6 lg:p-12 flex flex-col">
      <div class="w-full">
        <!-- Profile Image -->
        <div class="mb-10 lg:mb-12">
          <div class="relative">
            <div class="w-32 h-32 sm:w-40 sm:h-40 md:w-48 md:h-48 lg:w-56 lg:h-56 xl:w-64 xl:h-64 mx-auto mb-6 sm:mb-8 lg:mb-10 rounded-full overflow-hidden border-4 border-white dark:border-gray-800 shadow-xl">
              <img 
                src="/profile.png" 
                alt="Profile picture" 
                class="w-full h-full object-cover object-center hover:scale-105 transition-transform duration-500" 
                width="256"
                height="256"
              />
            </div>
            <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold mb-4 sm:mb-5 lg:mb-7 leading-tight text-center tracking-tight">
              <span class="text-primary-800 dark:text-primary-300 bg-clip-text bg-gradient-to-r from-primary-600 to-primary-800 dark:from-primary-300 dark:to-primary-500">
                {author.firstName} <span class="text-gray-900 dark:text-gray-100">{author.lastName}</span>
              </span>
            </h1>
            <p class="text-lg sm:text-xl md:text-2xl text-primary-600 dark:text-primary-400 mb-6 sm:mb-8 lg:mb-12 leading-normal text-center font-light">
              {author.subtitle}
            </p>
          </div>
        </div>
        <!-- Social Media Links -->
        <div class="space-y-5 lg:space-y-6">
          <SocialIcons />
        </div>
      </div>
    </div>

    <!-- Right Column - Work -->
    <div class="w-full lg:w-[45%] xl:w-[40%] max-w-3xl mx-auto lg:mx-0 p-4 sm:p-6 lg:p-12 flex flex-col">
      <div class="w-full">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-8 sm:mb-10 lg:mb-12">
          Ventures
          <span class="block w-16 h-1.5 bg-primary-500 dark:bg-primary-400 mt-3 rounded-full"></span>
        </h2>
        {products.length > 0 ? (
          <div class="space-y-6 sm:space-y-8">
            {products.map((product) => (
              <ProductCard product={product} />
            ))}
          </div>
        ) : (
          <div class="bg-white dark:bg-gray-800/50 backdrop-blur-sm rounded-2xl p-8 text-center border border-gray-100 dark:border-gray-700">
            <p class="text-lg text-gray-600 dark:text-gray-400">Working on something new. Stay tuned!</p>
          </div>
        )}
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Smooth scrolling for the entire page */
  html {
    scroll-behavior: smooth;
  }
  
  /* Fade-in animation for content */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  main > * {
    animation: fadeIn 0.6s ease-out forwards;
  }
  
  /* Smooth hover transitions */
  a, button, .transition-all {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.05);
    border-radius: 4px;
  }
  
  ::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.1);
    border-radius: 4px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: rgba(0, 0, 0, 0.2);
  }
  
  /* Dark mode scrollbar */
  .dark ::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
  }
  
  .dark ::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.1);
  }
  
  .dark ::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.2);
  }
</style>
