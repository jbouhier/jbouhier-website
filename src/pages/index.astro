---
import Layout from '@/layouts/Layout.astro';
import { SocialIcons } from '@/components/SocialIcons';
import { author, company } from '@/config';
---

<Layout>
  <main class="flex-1 flex flex-col items-center justify-center bg-gradient-to-b from-primary-50 via-primary-100 to-primary-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 px-5 sm:px-8 py-8 sm:py-0 min-h-screen">
    <div class="w-full max-w-2xl mx-auto flex flex-col items-center">
      <!-- Profile Image -->
      <div class="mb-6 sm:mb-8 md:mb-12">
        <div class="relative w-48 h-48 sm:w-64 sm:h-64 md:w-80 md:h-80 lg:w-96 lg:h-96 rounded-full overflow-hidden">
          {/* Glassmorphism border effect */}
          <div class="absolute inset-0 rounded-full backdrop-blur-md bg-white/30 dark:bg-black/30 border-4 border-white/30 dark:border-white/10 p-0.5">
            <div class="w-full h-full rounded-full overflow-hidden">
              <img
                src="/profile.png"
                alt="Profile picture"
                class="w-full h-full object-cover object-center transition-all duration-500 hover:scale-110"
                width="384"
                height="384"
              />
            </div>
          </div>
          {/* Subtle shine effect */}
          <div class="absolute inset-0 rounded-full pointer-events-none"
               style="background: radial-gradient(circle at 30% 30%, rgba(255,255,255,0.1) 0%, transparent 50%)">
          </div>
        </div>
      </div>

      <!-- Name -->
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold mb-4 sm:mb-6 md:mb-8 leading-tight text-center tracking-tight">
        <span class="bg-clip-text bg-gradient-to-r from-primary-500 to-primary-600 text-transparent">
          {author.firstName}
        </span>
        <span class="text-gray-900 dark:text-gray-100"> {author.lastName}</span>
      </h1>

      <!-- Tagline with link -->
      <p class="text-xl sm:text-2xl md:text-3xl text-gray-900 dark:text-gray-100 mb-8 sm:mb-10 md:mb-12 leading-relaxed text-center font-normal">
        Building startups @ <a href="{company.url}" class="text-primary-500 font-semibold hover:text-primary-600 underline decoration-2 underline-offset-4 transition-colors">{company.name}</a>
      </p>

      <!-- Social Media Links -->
      <div>
        <SocialIcons />
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Smooth scrolling for the entire page */
  html {
    scroll-behavior: smooth;
  }

  /* Fade-in animation for content */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  main > * {
    animation: fadeIn 0.6s ease-out forwards;
  }

  /* Smooth hover transitions */
  a, button, .transition-all {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
</style>
