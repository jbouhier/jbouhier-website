---
import Icon from '@/components/Icon.astro'
import { socialLinks } from '@/site'
---

<section id="contact" class="py-20 relative overflow-hidden">
  <div class="absolute inset-0 -z-10 h-full w-full bg-white dark:bg-gray-900 [background:radial-gradient(100%_50%_at_50%_100%,rgba(147,197,253,0.1)_0%,rgba(147,197,253,0)_100%)] dark:[background:radial-gradient(100%_50%_at_50%_100%,rgba(30,58,138,0.2)_0%,rgba(30,58,138,0)_100%)]"></div>
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-6">
        Get In Touch
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-12 max-w-2xl mx-auto">
        I'm currently looking for new opportunities. Whether you have a question, want to collaborate,
        or just want to say hi, I'll do my best to get back to you!
      </p>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6 max-w-4xl mx-auto">
        {socialLinks.map((social) => {
          // Determine icon color based on the platform
          const iconColor = {
            'X': 'text-black dark:text-white',
            'Bluesky': 'text-cyan-500',
            'YouTube': 'text-red-500',
            'LinkedIn': 'text-blue-500',
            'GitHub': 'text-gray-800 dark:text-gray-200'
          }[social.title] || 'text-gray-700 dark:text-gray-200'
          
          // Determine background color for hover state
          const bgColor = {
            'X': 'bg-black/5 dark:bg-white/5',
            'Bluesky': 'bg-cyan-500/5',
            'YouTube': 'bg-red-500/5',
            'LinkedIn': 'bg-blue-500/5',
            'GitHub': 'bg-gray-800/5 dark:bg-gray-200/5'
          }[social.title] || 'bg-gray-500/5'
          
          return (
            <a 
              href={social.url}
              target="_blank" 
              rel="noopener noreferrer"
              class={`group relative p-6 bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-200 dark:border-gray-700 hover:border-current transition-all duration-300 hover:-translate-y-1 hover:shadow-lg ${bgColor} hover:${bgColor.replace('5', '10')}`}
              aria-label={`${social.title} Profile`}
            >
              <div class="relative flex flex-col items-center">
                <div class="w-12 h-12 mb-4 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                  <Icon icon={social.icon} class={`text-2xl ${iconColor}`} />
                </div>
                <span class="text-gray-700 dark:text-gray-200 font-medium">{social.title}</span>
              </div>
            </a>
          )
        })}
      </div>
      
      <div class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-800">
        <p class="text-gray-500 dark:text-gray-400">
          Or send me a message directly at 
          <a 
            href="mailto:contact@jbouhier.com" 
            class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 font-medium transition-colors duration-200"
          >
            contact@jbouhier.com
          </a>
        </p>
      </div>
    </div>
  </div>
</section>
