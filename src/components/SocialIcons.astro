---
import { SocialIcons as ReactSocialIcons, type SocialIcon } from './SocialIcons.tsx';

interface SocialLink {
  platform: string;
  title: string;
  url: string;
  icon: string;
  color: string;
}

interface Props {
  links: readonly SocialLink[];
}

const { links } = Astro.props as Props;

// Convert social links to the format expected by ReactSocialIcons
const socialIcons: SocialIcon[] = links.map(link => ({
  name: link.title,
  href: link.url,
  icon: link.icon as 'x' | 'bluesky' | 'youtube' | 'linkedin',
  color: link.color,
  title: link.title
}));
---

<div class="flex flex-col items-center space-y-4">
  <ReactSocialIcons icons={socialIcons} />
</div>
