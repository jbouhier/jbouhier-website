---
const { product } = Astro.props;
---

<article class="group relative">
  <a
    href={product.url}
    target="_blank"
    rel="noopener noreferrer"
    class="block p-7 sm:p-8 rounded-2xl backdrop-blur-lg transition-all duration-300 transform overflow-hidden
           bg-white/40 dark:bg-black/30 border border-white/30 dark:border-white/10
           shadow-lg shadow-black/5 dark:shadow-black/30
           hover:bg-white/60 dark:hover:bg-black/40
           hover:shadow-xl hover:shadow-primary-400/10 dark:hover:shadow-primary-700/20
           hover:-translate-y-1 hover:scale-[1.02]"
    aria-label={`View ${product.title}`}
  >
    <div class="relative z-10 flex flex-col h-full">
      {/* Header with icon and title */}
      <div class="flex items-center gap-5 mb-5">
        <div class="flex-shrink-0 w-12 h-12 sm:w-14 sm:h-14 flex items-center justify-center rounded-xl backdrop-blur-sm bg-white/30 dark:bg-black/20 border border-white/30 dark:border-white/10">
          <img
            src={product.image}
            alt={product.title}
            class="w-7 h-7 sm:w-8 sm:h-8 object-contain transition-all duration-300 group-hover:scale-125 group-hover:rotate-6"
          />
        </div>

        <div class="flex-1 min-w-0">
          <div class="flex items-center justify-between gap-2">
            <h3 class="text-2xl sm:text-3xl font-bold text-primary-800 dark:text-primary-100 truncate">
              {product.title}
            </h3>
          </div>
        </div>
      </div>

      {/* Description */}
      <p class="text-primary-700/90 dark:text-primary-200/80 text-xl sm:text-2xl leading-relaxed font-normal">
        {product.description}
      </p>
    </div>
  </a>
</article>

<style>
  /* Glassmorphism effect enhancement */
  article::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg, 
      rgba(255, 255, 255, 0.05) 0%, 
      rgba(255, 255, 255, 0.1) 100%
    );
    border-radius: 1rem;
    z-index: 1;
    opacity: 1;
    transition: opacity 0.3s ease-out;
    pointer-events: none;
  }
  
  article:hover::before {
    opacity: 0.7;
  }
  
  /* Subtle floating effect on hover */
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-5px); }
    100% { transform: translateY(0px); }
  }
  
  article:hover {
    animation: float 3s ease-in-out infinite;
  }
</style>
